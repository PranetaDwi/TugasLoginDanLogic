<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="130dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/wel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:text="Welcome"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_alignTop="@+id/wel"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/wel"
        android:layout_toEndOf="@+id/wel"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/em"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wel"
        android:text="Your "
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="20sp"
        android:layout_alignTop="@+id/em"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/em"
        android:layout_toEndOf="@+id/em"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/actived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="has been actived"
        android:textSize="20sp"
        android:layout_alignTop="@+id/email"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/your"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/em"
        android:text="Your "
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone"
        android:textSize="20sp"
        android:layout_alignTop="@+id/your"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/your"
        android:layout_toEndOf="@+id/your"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="has been registered"
        android:textSize="20sp"
        android:layout_alignTop="@+id/phone"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/phone"
        android:layout_toEndOf="@+id/phone"
        android:textColor="@color/black"/>

</RelativeLayout>